{
    "$schema": "http://json-schema.org/draft-07/schema#", 
    "$id": "https://sesam.be/validation_schemas/operator_schema.json", 
    "title":"Operator", 
    "description": "schema.org compliant description of a cultural operator", 
    "type":"object", 
    "properties" : {
        "@context": {
            "description": "obligatory schema.org element", 
            "type":"string"
        }, 
        "@type": {
            "description": "obligatory schema.org element", 
            "type":"string"
        }, 
        "identifier":{
            "description" : "identifier of operator object in SESAM database", 
            "type":"integer"
        }, 
        "name":{
            "description": "the name of the operator",
            "type":"string"
        }, 
        "keywords":{
            "description": "associated categories of cultural content", 
            "type":"array", 
            "items": {
                "type": "object", 
                "$ref": "#/$defs/keyword"
            }
        }, 
        "location":{
            "description": "associated geographical area", 
            "type":"object", 
            "$ref": "#/$defs/place"
        }, 
        "url":{
            "description": "link to Operator webpage",
            "type":"string"
        }
    }, 
    "required": ["@type","identifier", "name"], 

    "$defs" : {
        "keyword" : {
            "$id":"validation_schemas/keywords_schema.json", 
            "$schema" : "http://json-schema.org/draft-07/schema#", 
            "title" : "Keywords",
            "description": "keywords of a creator, expressing categories of cultural products", 
            "type":"object", 
            "properties": {
                "@type": {"type":"string", "description": "obligatory schema.org element"},
                "name":{"type":"string", "description": "name of the category of cultural product or content"},
                "termCode":{"type":"string", "description": "termcode associated to category of cultural product or content"}, 
                "inDefinedTermSet":{"type":"string", "description":"url to the termSet defining the correspondance between names and termCodes for categories of cultural products"}
            }, 
            "required":["@type","name", "termCode", "inDefinedTermSet"], 
            "additionalProperties":false
        }, 
        "place":{
            "$id":"validation_schemas/place_schema.json", 
            "$schema" : "http://json-schema.org/draft-07/schema#", 
            "title":"Place",
            "description":"geographical area associated to operator",
            "type":"object",
            "properties": {
                "@type": {"type":"array", "items":{"type":"string"}, "description": "obligatory schema.org element"},
                "name":{"type":"string", "description":"name of the geographical area"},
                "termCode":{"type":"string", "description":"termCode associated to the geographical area"}, 
                "inDefinedTermSet":{"type":"string", "description":"url to the termSet defining the correspondance between names and termCodes for geographical areas"}
            }, 
            "required":["@type","name", "termCode", "inDefinedTermSet"], 
            "additionalProperties":false
        }
    }
}